@page
@model proyecto1bases.Pages.mesplantilla

@{
    ViewData["Title"] = "Plantilla por mes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plantilla por mes</title>
    <link rel="stylesheet" href="~/css/index.css"> <!-- Enlace a tu CSS -->
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="form-group">
            <form method="get">
                <label for="Mes">Seleccione mes:</label>
                <select id="Mes" asp-for="Mes" class="form-control" required>
                    <option value="">Seleccione un mes</option>
                    <option value="Enero">Enero</option>
                    <option value="Febrero">Febrero</option>
                    <option value="Marzo">Marzo</option>
                    <option value="Abril">Abril</option>
                    <option value="Mayo">Mayo</option>
                    <option value="Junio">Junio</option>
                    <option value="Julio">Julio</option>
                    <option value="Agosto">Agosto</option>
                    <option value="Setiembre">Setiembre</option>
                    <option value="Octubre">Octubre</option>
                    <option value="Noviembre">Noviembre</option>
                    <option value="Diciembre">Diciembre</option>
                </select>
                <button type="submit">Consultar Planilla</button>
            </form>
        </div>

        @if (Model.Planillas.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>CÃ©dula</th>
                        <th>Nombre Completo</th>
                        <th>Departamento</th>
                        <th>Horas Normales</th>
                        <th>Horas Extras</th>
                        <th>Salario Actual</th>
                        <th>Total Salario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var planilla in Model.Planillas)
                    {
                        <tr>
                            <td>@planilla["cedula"]</td>
                            <td>@planilla["nombre_completo"]</td>
                            <td>@planilla["departamento"]</td>
                            <td>@planilla["h_normales"]</td>
                            <td>@planilla["h_extras"]</td>
                            <td>@planilla["salario_actual"]</td>
                            <td>@planilla["total_salario"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert">
                <p>No se encontraron registros para el mes seleccionado.</p>
            </div>
        }

        <form method="get" action="/menus/ManejoUsuarios">
            <button type="submit" class="boton-volver">Volver</button>
        </form>
    </div>
</body>
</html>
