@page
@model proyecto1bases.Pages.AsignarRol

@{
    ViewData["Title"] = "Gestión de Inventarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>
    <link rel="stylesheet" href="~/css/index.css">
</head>
<body>
    <div class="container">
        <h2>Definir resultados</h2>

        @if (Model.funciono)
        {
            <div class="alert">
                <strong>¡Se asigno el rol!</strong>
            </div>
        }
        <form method="post">
            <div class="form-group">
                <label for="Cedula">Empleado</label>
                <select id="Cedula" asp-for="Cedula" class="form-control" required>
                    <option value="">Seleccione una Empleado</option>
                    @foreach (var Empleados in Model.Empleados)
                    {
                        <option value="@Empleados.Id"> @Empleados.nombre  </option>
                    }
                </select>
            </div>  
            <div class="form-group">
                <label for="rol">rol</label>
                <select id="rol" asp-for="rol" class="form-control" required>
                    <option value="">Seleccione un rol</option>
                    @foreach (var roles in Model.roles)
                    {
                        <option value="@roles">@roles </option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Asignar Rol</button>
        </form>
    </div>
        <form method="get" action=/menus/ManejoUsuarios>
            <button type="submit" class="boton-volver">Volver</button>
        </form>
</body>
</html>