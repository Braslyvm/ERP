@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif, sans-serif;
            background-color: #fdfdfd;
            margin: 0;
            padding: 0; 
        }
        .container { 
            width: 80%;
            max-width: 600px;
            padding: 20px;
            background-color: #e5e9e9;
            border-radius: 8px;
            margin: 0 auto;
        }
        h1 {
            font-size: 2rem;
            color: #000000;
        }
        .report-button {
            width: 100%;
            padding: 10px;
            background-color: #1f45ad;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
        }
        .report-button:hover {
            background-color: #ddd125;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Gestión de reportes</h1>

        <!-- Botones para los reportes -->
        <form method="get" action="/menus/menuanimesplanilla">
            <button type="submit" class="report-button">Monto pagado por planilla (Mes/Año)</button>
        </form>
        <form method="get" action="/ReportesE/depa">
            <button type="submit" class="report-button">Planilla por departamento (Mes)</button>
        </form>
        <form method="get" action="/reportes/TopBodegasArticulos">
            <button type="submit" class="report-button">Top bodegas con más artículos</button>
        </form>
        <form method="get" action="/reportes/MovimientosBodega">
            <button type="submit" class="report-button">Movimientos de entrada/salida (Bodega)</button>
        </form>
        <form method="get" action="/ReportesE/Ventafam">
            <button type="submit" class="report-button">Familias de productos vendidos</button>
        </form>
        <form method="get" action="/reportes/TopProductosCotizados">
            <button type="submit" class="report-button">Top 10 productos más cotizados</button>
        </form>
        <form method="get" action="/reportes/VentasPorSector">
            <button type="submit" class="report-button">Ventas por sector</button>
        </form>
        <form method="get" action="/reportes/VentasPorZona">
            <button type="submit" class="report-button">Ventas por zona</button>
        </form>
        <form method="get" action="/reportes/CotizacionesVentasDepartamento">
            <button type="submit" class="report-button">Cotizaciones y ventas por departamento</button>
        </form>
        <form method="get" action="/reportes/VentasPorDepartamento">
            <button type="submit" class="report-button">Ventas por departamento</button>
        </form>
        <form method="get" action="/reportes/VentasCotizacionesMensuales">
            <button type="submit" class="report-button">Ventas y cotizaciones por mes/año</button>
        </form>
        <form method="get" action="/reportes/TopClientesVentas">
            <button type="submit" class="report-button">Top 10 clientes con mayores ventas</button>
        </form>
        <form method="get" action="/reportes/ClientesPorZona">
            <button type="submit" class="report-button">Cantidad de clientes por zona</button>
        </form>
        <form method="get" action="/reportes/CasosPorCotizacionFactura">
            <button type="submit" class="report-button">Cantidad de casos por cotización/factura</button>
        </form>
        <form method="get" action="/reportes/TareasSinCerrar">
            <button type="submit" class="report-button">Top 15 tareas sin cerrar más antiguas</button>
        </form>

        <!-- Botón para regresar al menú principal -->
        <form method="get" action="/Menu">
            <button type="submit" class="report-button">Volver</button>
        </form>
    </div>
</body>
</html>
