@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif, sans-serif;
            background-color: #fdfdfd;
            margin: 0;
            padding: 0; 
        }
         //contedor de info
        .container { 
           width: 80%;
           max-width: 600px;
           padding: 20px;
           background-color: #e5e9e9;
           border-radius: 8px;
         
        
            
        }
        h1 {
            font-size: 2rem;
            color: #000000;
           
           
        }
        form {
           
            margin-bottom: 20px;
        }
        button {
            width: 100%;
            padding: 12px;
            background-color: #1f45ad;
            color: white;
            border: currentColor;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #ddd125;
        }
    </style>
</head>
<body>
  
    <div class="container">
          <h1>Gestion de actividades</h1>

        <form method="get" action=/menus/ManejoUsuarios>
            <button type="submit">Manejo de Usuarios</button>
        </form>
       
        <form method="get" action=/menus/Ventas>
            <button type="submit">Ventas</button>
        </form>
         <form method="get" action=/menus/Administrativo>
     <button type="submit">Administrativo</button>
 </form>
        
    </div>
</body>
</html>
