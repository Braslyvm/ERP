@page
@model proyecto1bases.Pages.topTareas
@{
    ViewData["Title"] = "Top 15 Tareas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        /* Estilos de tabla simplificados */
        .styled-table {
            width: 100%; 
            border-collapse: collapse; 
            margin-top: 15px;
        }

        .styled-table th, .styled-table td {
            padding: 8px;
            text-align: left; 
            border-bottom: 1px solid #ddd; 
        }

        .styled-table th {
            background-color: #4CAF50; 
            color: white; 
        }

        .styled-table tr:hover {
            background-color: #f1f1f1; 
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #f9f9f9; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        
        <!-- Formulario para seleccionar rango de fechas -->
        <form method="get">
            <label for="FechaInicio">Fecha Inicio:</label>
            <input type="date" id="FechaInicio" name="FechaInicio" value="@Model.FechaInicio?.ToString("yyyy-MM-dd")" />

            <label for="FechaFin">Fecha Fin:</label>
            <input type="date" id="FechaFin" name="FechaFin" value="@Model.FechaFin?.ToString("yyyy-MM-dd")" />

            <button type="submit">Buscar</button>
        </form>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>ID Tarea</th>
                    <th>ID Cotización</th>
                    <th>Descripción</th>                    
                    <th>Fecha Inicio</th>
                    <th>Fecha Límite</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in Model.topTareasList)
                {
                    <tr>
                        <td>@tarea.id_tarea</td>
                        <td>@tarea.id_cotizacion</td>
                        <td>@tarea.descripcion</td>
                        <td>@tarea.fecha_inicio.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@tarea.fecha_limite.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@tarea.estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <form method="get" action="/menus/Reportes">
        <button type="submit" class="boton-volver">Volver</button>
    </form>
</body>
</html>
