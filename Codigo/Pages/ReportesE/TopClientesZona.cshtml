@page
@model proyecto1bases.Pages.topClientesZona
@{
    ViewData["Title"] = "Cantidad de clientes por zona";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        .styled-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }
        .styled-table th, .styled-table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .styled-table th {
            background-color: #4CAF50;
            color: white;
        }
        .styled-table tr:hover {
            background-color: #f1f1f1;
        }
        .styled-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .boton-volver {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .boton-volver:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <!-- Formulario para capturar el rango de fechas -->
        <form method="get">
            <label for="fecha_inicio">Fecha Inicio:</label>
            <input type="date" id="fecha_inicio" name="FechaInicio" value="@Model.FechaInicio?.ToString("yyyy-MM-dd")" />

            <label for="fecha_fin">Fecha Fin:</label>
            <input type="date" id="fecha_fin" name="FechaFin" value="@Model.FechaFin?.ToString("yyyy-MM-dd")" />

            <button type="submit">Filtrar</button>
        </form>

        <!-- Tabla para mostrar los resultados -->
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Zona</th>
                    <th>Cantidad de Clientes</th>
                    <th>Monto Total (â‚¬)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var datos in Model.topClientezona)
                {
                    <tr>
                        <td>@datos.Zona</td>
                        <td>@datos.cantidad_clientes</td>
                        <td>@String.Format("{0} ", datos.monto_total)</td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/menus/Reportes">
            <button class="back-button">Volver a Reportes</button>
        </a>

       
       
       

    </div>
</body>
</html>
