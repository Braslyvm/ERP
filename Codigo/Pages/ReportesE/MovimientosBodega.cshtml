@page
@model proyecto1bases.Pages.ReportesE.MovimientosBodegaModel
@{
    ViewData["Title"] = "Movimientos de Bodega";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <form method="get" asp-page="./MovimientosBodega">
            <div class="mb-3">
                <label for="tipoMovimiento" class="form-label">Tipo de Movimiento</label>
                
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>

        <div class="mt-4">
            <canvas id="movimientosPieChart"></canvas>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        var ctx = document.getElementById('movimientosPieChart').getContext('2d');
        
        var data = {
            labels: ['Entrada', 'Salida'],
            datasets: [{
                label: 'Movimientos de Bodega',
                data: [
                    @String.Join(",", Model.Movimientos.Where(m => m.Tipo == "entrada").Count()),  // Cuenta de Entradas
                    @String.Join(",", Model.Movimientos.Where(m => m.Tipo == "salida").Count())   // Cuenta de Salidas
                ],
                backgroundColor: ['#36A2EB', '#FF6384'],
                hoverOffset: 4
            }]
        };

        var config = {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                return tooltipItem.label + ": " + tooltipItem.raw + " movimientos";
                            }
                        }
                    }
                }
            },
        };

        var myPieChart = new Chart(ctx, config);
    </script>
</body>
</html>
