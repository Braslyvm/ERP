@page
@model proyecto1bases.Pages.ReportesE.MovimientosBodegaModel
@{
    ViewData["Title"] = "Movimientos de Bodega";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <form method="get" asp-page="./MovimientosBodega">

            <div class="mb-3">
                <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
                <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" value="@Model.FechaInicio?.ToString("yyyy-MM-dd")" />
            </div>

            <div class="mb-3">
                <label for="fechaFin" class="form-label">Fecha de Fin</label>
                <input type="date" id="fechaFin" name="fechaFin" class="form-control" value="@Model.FechaFin?.ToString("yyyy-MM-dd")" />
            </div>

            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>

        <div class="mt-4">
            <canvas id="movimientosPieChart"></canvas>
        </div>
    </div>
    <a href="/menus/Reportes">
            <button class="back-button">Volver a Reportes</button>
        </a>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        var ctx = document.getElementById('movimientosPieChart').getContext('2d');

        // Preparando los datos para el grÃ¡fico
        var entradas = @Model.Movimientos.Where(m => m.Tipo == "entrada").Sum(m => m.Cantidad);
        var salidas = @Model.Movimientos.Where(m => m.Tipo == "salida").Sum(m => m.Cantidad);

        var data = {
            labels: ['Entrada', 'Salida'],
            datasets: [{
                label: 'Movimientos de Bodega',
                data: [entradas, salidas],
                backgroundColor: ['#36A2EB', '#FF6384'],
                hoverOffset: 4
            }]
        };

        var config = {
            type: 'pie',
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                return tooltipItem.label + ": " + tooltipItem.raw + " movimientos";
                            }
                        }
                    }
                }
            },
        };

        var myPieChart = new Chart(ctx, config);
    </script>
</body>
</html>
